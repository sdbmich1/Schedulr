<div class="span-12"><h3 class="grp-hdr"><center>Send Notifications</center></h3><hr /><%= form_for @notification, :id => 'notify_form', :validate => true, :remote=>true do |f| %> 	<strong>Notice Type:</strong>	<p><%= f.collection_select "Notice_Type", NoticeType.unhidden, :code, :code_title, :prompt => 'Select' %></p>	<br />	<p><strong>Additional Comments:</strong>    <%= f.text_area :Comment, :size => 255 %></p>	<% ['eventid', 'eventstartdate', 'eventstarttime', 'eventenddate' ,'eventendtime', 'contentsourceID', 'event_type', 'event_name'].each do |fld| %>        <%= f.hidden_field fld, :value => @event.send(fld) %>    <% end %>    <%= f.hidden_field :event_id, :value => @event.ID %>    <%= f.hidden_field :location, :value => @event.set_location %>	<center><%= f.submit "Send", :id=>'submit-btn' %></center><% end %></div>