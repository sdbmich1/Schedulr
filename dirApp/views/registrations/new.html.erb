<%= render :partial => 'shared/menu_head', :locals => { :menu_type => 'Sign Up' } %>

<% content_for :content do -%>
  <%= render "devise/shared/links" %>
  <h3><strong>Engage Your Audience.</strong></h3>

  <%= form_for(resource_name, resource.with_host_profile, :as => :resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
 	<div id="newreg">
   	  <p><span>First Name*</span> <%= f.text_field :first_name %></p> 
 	  <p><span>Last Name*</span>  <%= f.text_field :last_name %></p>
  	  <p><span>Username*</span> 
	    <div id="mform"><p><label for="user_username">Must be at least 6 characters</label>
	    <%= f.text_field :username %></p></div></p>
	  <p><span>Password*</span>
	    <div id="mform"><p><label for="user_password">Must be at least 8 characters</label>
	    <%= f.password_field :password, :class => "password" %></p></div></p>
   	  <p><span>Email*</span><%= f.text_field :email %></p>
 	  <p><span>Nearest City*</span><%= f.collection_select :location_id, Location.all, :id, :city, :prompt => 'Select' %></p>
    		<%= f.fields_for :host_profiles do |form| %>
      		   <%= render :partial => 'shared/host_profiles', :locals => { :f => form } %>
    		<% end %>
		<div class="terms-info">
     	  <p>By clicking on "Sign Up" below, you are agreeing to the 
     		<a href="#">Terms of Service</a> and the <a href="#">Privacy Policy</a>.</p>
		</div>
		<%= f.submit "Sign Up" %>
      </div>
  <% end %>
<% end %>
