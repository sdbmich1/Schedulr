<div class="show-item">
  <div class="span-2">Name:</div>
  <% if event.event_type != 'es' %>
    <div class="span-18 last"><strong><%= event.event_name %> </strong></div>
  <% else %>
    <div class="span-17 last"><strong><%= event.event_name %> </strong></div>
  <% end %>
  <div class="span-2">Event Type:</div>
  <div class="span-18"><%= get_event_type(event.event_type) %></div>
  <div class="span-2"><%= 'Date:' %></div>
  <div class="span-18 last">	<%= get_start_date(event.eventstartdate, event.eventenddate, "Show") %><br /></div>	
  <div class="span-2"><%= 'Time:'%></div>
  <div class="span-18 last">
    <%= get_nice_time(chk_offset(event.eventstarttime, event.localGMToffset)) %> -
    <%= get_nice_time(chk_offset(event.eventendtime, event.endGMToffset)) %>
  </div>
  
  <%= render :partial => 'shared/show_event_contact', :locals => {:event => event} %>
  <%= render :partial => 'shared/show_event_location', :locals => {:event => event} %>
  <%= render :partial => 'shared/show_event_fees', :locals => {:event => event} %>
</div>
