<%= render :partial => 'shared/menu_head', :locals => { :menu_type => 'Promo' } %>

<%= content_for :content do %>
  <h2 class="grp-hdr">Promo List</h2>
  <hr />

  <% unless @parent_event %>
    <p><%= link_to "New Promo", new_event_promo_url(:cid=>@channel), :id=>"link-btn", :class=>"round nav-right" %></p><br />
  <% end %>

  <p>
  <div id="promo-list"><%= render :partial => 'shared/promo_list', :locals => { :event => @event, :promolist => 'No', :parent => @parent_event } %></div>
  </p>
<% end %>
