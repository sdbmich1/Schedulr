<%= form_for @event_session, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Event: " %><%= @event_session.event_title %>
    <%= f.hidden_field :event_id, :value => @event_session.event_id %>
    <%= f.hidden_field :event_title, :value => @event_session.event_title %>
  </p>
  <p>
    <%= f.label "Track" %><br />
    <%= f.collection_select :event_track_id, EventTrack.get_track(@event_session.event_id), :id, :name, :prompt => 'Select' %>
  </p>
  <p>
    <%= f.label "Session Name" %><br />
    <%= f.text_field :event_name %>
  </p>
  <p>
    <%= f.label :session_type %><br />
    <%= f.collection_select :session_type, SessionType.all, :code, :description, :prompt => 'Select' %>
  </p>
  <p>
    <%= f.label "Topic: " %><br />
    <%= f.text_field :speakertopic %>
  </p>
  <p>
    <%= f.label :cbody %><br />
    <%= f.text_area :cbody %>
  </p>
  <p>
    <%= f.label :bbody %><br />
    <%= f.text_field :bbody %>
  </p>
  <p>
    <%= f.label "Start Date: " %>
    <%= f.date_select :eventstartdate %>
  </p>
  <p>
    <%= f.label "End Date: " %>
    <%= f.date_select :eventenddate %>
  </p>
  <p>
    <%= f.label "Start Time: " %>
    <%= f.time_select :eventstarttime, :value => chk_offset(@event_session.eventstarttime, @event_session.localGMToffset) %>
  </p>
  <p>
    <%= f.label "End Time: " %>
    <%= f.time_select :eventendtime, :value => chk_offset(@event_session.eventendtime, @event_session.endGMToffset) %>
  </p>
  <p>
    <%= f.label "Start Timezone: " %>
    <%= f.collection_select :localGMToffset, GmtTimezone.all, :code, :description, :prompt => 'Select Timezone' %>
  </p>
  <p>
    <%= f.label "End Timezone: " %>
    <%= f.collection_select :endGMToffset, GmtTimezone.all, :code, :description, :prompt => 'Select Timezone' %>
  </p>
  <p>
    <%= f.label "Address: " %>
    <%= f.text_field :mapstreet %>
  </p>
  <p>
    <%= f.label "City: " %>
    <%= f.text_field :mapcity %>
  </p>
  <p>
    <%= f.label "State: " %>
    <%= f.text_field :mapstate %>
  </p>
  <p>
    <%= f.label "Zip: " %>
    <%= f.text_field :mapzip %>
  </p>
  <p>
    <%= f.label "Place: " %>
    <%= f.text_field :mapplacename %>
  </p>
  <p>
    <%= f.label :mapcountry %><br />
    <%= f.text_field :mapcountry %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <%= f.fields_for :event_speakers do |builder| %>
    <%= render 'event_speakers', :f => builder %>
  <% end %>
  <p><%= f.submit %></p>
<% end %>
