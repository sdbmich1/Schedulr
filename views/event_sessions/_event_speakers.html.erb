<p>
   <%= f.label "Speaker:" %>
   <%= f.text_field :speaker %>
   <%= f.hidden_field :event_id, :value => @event_session.event_id %>
</p>
<p>
   <%= f.label "Title:" %>
   <%= f.text_field :title %>
</p>
<p>
   <%= f.label "Organization:" %>
   <%= f.text_field :org_name %>
</p>
<p>
   <%= f.label :bio %><br />
   <%= f.text_area :bio %>
</p>
<p>
   <%= f.check_box :_destroy %>
   <%= f.label :_destroy, "Remove Speaker" %>
</p>

<%= f.fields_for :pictures, @picture do |form| %>
   <p>
   <%= f.label "Photo:" %>
   <%= form.file_field :photo %></p>
<% end %>

<%= f.fields_for :contact_details do |builder| %>  
  <%= render 'contact_details', :f => builder %>  
<% end %>
