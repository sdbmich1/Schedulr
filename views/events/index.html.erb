<% title "Events" %>

<table>
  <tr>
    <th>Event Name</th>
    <th>Event Type</th>
    <th>Bbody</th>
    <th>Eventstartdate</th>
    <th>Eventenddate</th>
    <th>Eventstarttime</th>
    <th>Eventendtime</th>
    <th>Localgmtoffset</th>
    <th>Endgmtoffset</th>
  </tr>
  <% for event in @events %>
    <tr>
      <td><%= event.event_name %></td>
      <td><%= event.event_type %></td>
      <td><%= event.bbody %></td>
      <td><%= event.eventstartdate %></td>
      <td><%= event.eventenddate %></td>
      <td><%= chk_offset(event.eventstarttime, event.localGMToffset) %></td>
      <td><%= chk_offset(event.eventendtime, event.endGMToffset) %></td>
      <td><%= event.localGMToffset %></td>
      <td><%= event.endGMToffset %></td>
      <td><%= link_to "Show", event %></td>
      <td><%= link_to "Edit", edit_event_path(event) %></td>
      <td><%= link_to "Destroy", event, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Event", new_event_path %></p>
