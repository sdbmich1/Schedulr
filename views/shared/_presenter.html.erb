<p>
   <%= f.label "Speaker:" %>
   <%= f.text_field :name %>
</p>
<p>
   <%= f.label "Title:" %>
   <%= f.text_field :title %>
</p>
<p>
   <%= f.label "Organization:" %>
   <%= f.text_field :org_name %>
</p>
<p>
   <%= f.label :bio %><br />
   <%= f.text_area :bio %>
</p>

<%= f.fields_for :pictures, @picture do |form| %>
   <p>
   <%= f.label "Photo:" %>
   <%= form.file_field :photo %></p>
<% end %>

<%= f.fields_for :contact_details do |builder| %>  
  <%= render 'shared/contact_details', :f => builder %>  
<% end %>

<p>
   <%= link_to_remove_fields "Remove", f%><br />  
</p>
